<div class="main-container">
  <div class="header">
    <h1 class="page-title">投稿一覧</h1>
    <% if user_signed_in? %>
      <%= link_to '新規投稿', new_post_path, class: "create-post-button" %>
    <% end %>
  </div>

  <!-- グリッドレイアウト -->
  <div class="post-grid">
    <% @posts.each do |post| %>
      <%= link_to post_path(post), class: "post-card-link" do %>
        <div class="post-card">
          <!-- 投稿者情報 -->
          <div class="post-user">
            <%= image_tag post.user.profile_image.attached? ? post.user.profile_image.variant(resize_to_fill: [50, 50]) : 'default_avatar.png', 
              class: "user-icon" %>
            <div class="user-details">
              <h2 class="post-title"><%= post.title %></h2>
              <p class="post-meta"><%= post.user.username %> • <%= time_ago_in_words(post.created_at) %></p>
            </div>
          </div>

          <!-- 投稿画像 -->
          <% if post.image.attached? %>
            <div class="post-image">
              <%= image_tag post.image.variant(resize_to_limit: [300, 300]), class: "image-content" %>
            </div>
          <% end %>

          <!-- 投稿内容 -->
          <p class="post-description"><%= truncate(post.content, length: 100) %></p>

          <!-- ポートフォリオタグ -->
          <% if post.portfolio? %>
            <div class="portfolio-tag">
              ポートフォリオ
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>