<div class="max-w-4xl mx-auto p-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">投稿一覧</h1>
    <% if user_signed_in? %>
      <%= link_to '新規投稿', new_post_path, class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" %>
    <% end %>
  </div>

  <div class="space-y-6">
    <% @posts.each do |post| %>
      <div class="post-container">
        <div class="flex items-center mb-4">
          <%= link_to user_path(post.user) do %>
            <%= image_tag post.user.profile_image.attached? ? post.user.profile_image : 'default_avatar.png', 
                class: "w-10 h-10 rounded-full mr-4" %>
          <% end %>
          <div>
            <h2 class="post-header"><%= post.title %></h2>
            <p class="text-gray-500 text-sm"><%= post.user.username %> • <%= time_ago_in_words(post.created_at) %>前</p>
          </div>
        </div>

        <% if post.image.attached? %>
          <div class="mb-4">
            <%= image_tag post.image, class: "w-full rounded-lg" %>
          </div>
        <% end %>

        <p class="post-content"><%= post.content %></p>

        <div class="flex justify-between items-center">
          <div class="space-x-4">
            <%= link_to '詳細', post_path(post), class: "text-blue-500 hover:text-blue-700" %>
            <% if current_user == post.user %>
              <%= button_to '削除', post_path(post), method: :delete, class: "text-red-500 hover:text-red-700", 
                  data: { confirm: '本当に削除しますか？' } %>
            <% end %>
          </div>
          <% if post.portfolio? %>
            <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">ポートフォリオ</span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>