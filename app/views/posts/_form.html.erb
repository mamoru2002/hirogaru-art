<%= form_with(model: post, class: "post-form") do |f| %>
  <% if post.errors.any? %>
    <div class="error-messages">
      <h2 class="error-title"><%= pluralize(post.errors.count, "error") %> が発生しました:</h2>
      <ul class="error-list">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "タイトル", class: "form-label" %>
    <%= f.text_field :title, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :content, "内容", class: "form-label" %>
    <%= f.text_area :content, rows: 5, class: "form-textarea" %>
  </div>

  <div class="form-group">
    <%= f.label :image, "画像", class: "form-label" %>
    <%= f.file_field :image, class: "form-file-input" %>
  </div>

  <div class="form-group-checkbox">
    <label class="checkbox-container">
      <%= f.check_box :portfolio, class: "form-checkbox" %>
      <span class="checkbox-label">ポートフォリオとして追加する</span>
    </label>
  </div>

  <div class="form-actions">
    <%= f.submit "送信", class: "form-submit" %>
  </div>
<% end %>