<div class="max-w-4xl mx-auto p-4">
  <div class="bg-white rounded-lg shadow p-6">
    <%# 投稿者情報 %>
    <div class="flex items-center mb-6">
      <%= link_to user_path(@post.user) do %>
        <%= image_tag @post.user.profile_image.attached? ? @post.user.profile_image : 'default_avatar.png', 
            class: "w-12 h-12 rounded-full mr-4" %>
      <% end %>
      <div>
        <h2 class="font-bold text-xl"><%= @post.title %></h2>
        <p class="text-gray-500">
          <%= link_to @post.user.username, user_path(@post.user), class: "hover:text-gray-700" %> 
          • <%= l @post.created_at, format: :long %>
        </p>
      </div>
    </div>

    <%# 投稿画像 %>
    <% if @post.image.attached? %>
      <div class="mb-6">
        <%= image_tag @post.image, class: "w-full rounded-lg" %>
      </div>
    <% end %>

    <%# 投稿内容 %>
    <div class="prose max-w-none mb-6">
      <%= @post.content %>
    </div>

    <%# ポートフォリオバッジ %>
    <% if @post.portfolio? %>
      <div class="mb-6">
        <span class="bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">ポートフォリオ</span>
      </div>
    <% end %>

    <%# アクションボタン %>
    <div class="flex justify-between items-center">
      <div class="space-x-4">
        <%= link_to '戻る', posts_path, class: "text-gray-500 hover:text-gray-700" %>
      </div>
    </div>
  </div>
</div>