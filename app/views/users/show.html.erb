<div class="max-w-4xl mx-auto p-4">
  <%# プロフィール画像 %>
  <div class="h-48 bg-gray-200 rounded-t-lg relative">
    <div class="absolute -bottom-16 left-8">
      <%= image_tag @user.profile_image.attached? ? @user.profile_image : 'default_avatar.png', 
          alt: @user.username, 
          class: "w-32 h-32 rounded-full border-4 border-white object-cover" 
      %>
    </div>
  </div>

  <%# プロフィール情報 %>
  <div class="bg-white rounded-b-lg shadow">
    <div class="pt-20 px-8 pb-8">
      <%# ユーザー名と編集ボタン %>
      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 class="text-2xl font-bold"><%= @user.username %></h1>
          <p class="text-gray-600">@<%= @user.username %></p>
        </div>
        <% if current_user == @user %>
          <%= link_to edit_user_path(@user), class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" do %>
            プロフィールを編集
          <% end %>
        <% end %>
      </div>

      <%# 自己紹介 %>
      <% if @user.bio.present? %>
        <p class="text-gray-700 mb-6"><%= @user.bio %></p>
      <% end %>

      <%# SNSリンク %>
      <div class="flex gap-4">
        <% if @user.website.present? %>
          <%= link_to @user.website, target: "_blank", class: "text-gray-600 hover:text-gray-900" do %>
            <span>Website</span>
          <% end %>
        <% end %>

        <% if @user.twitter.present? %>
          <%= link_to @user.twitter, target: "_blank", class: "text-gray-600 hover:text-gray-900" do %>
            <span>Twitter</span>
          <% end %>
        <% end %>

        <% if @user.instagram.present? %>
          <%= link_to @user.instagram, target: "_blank", class: "text-gray-600 hover:text-gray-900" do %>
            <span>Instagram</span>
          <% end %>
        <% end %>

        <% if @user.facebook.present? %>
          <%= link_to @user.facebook, target: "_blank", class: "text-gray-600 hover:text-gray-900" do %>
            <span>Facebook</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
