<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "users_edit", media: "all" %>
<% end %>

<div class="edit-profile-container">
  <h1 class="edit-profile-title">プロフィールを編集</h1>

  <%= form_with(model: @user, local: true, data: { turbo: false }, class: "edit-profile-form") do |form| %>
    <!-- ユーザー名 -->
    <div class="form-group">
      <%= form.label :username, "ユーザー名", class: "form-label" %>
      <%= form.text_field :username, class: "form-input" %>
    </div>

    <!-- 自己紹介 -->
    <div class="form-group">
      <%= form.label :bio, "自己紹介", class: "form-label" %>
      <%= form.text_area :bio, class: "form-textarea" %>
    </div>

    <!-- ウェブサイト -->
    <div class="form-group">
      <%= form.label :website, "ウェブサイト", class: "form-label" %>
      <%= form.text_field :website, class: "form-input" %>
    </div>

    <!-- SNSフィールド -->
    <div class="form-group">
      <%= form.label :twitter, "Twitter", class: "form-label" %>
      <%= form.text_field :twitter, class: "form-input" %>
    </div>
    <div class="form-group">
      <%= form.label :instagram, "Instagram", class: "form-label" %>
      <%= form.text_field :instagram, class: "form-input" %>
    </div>
    <div class="form-group">
      <%= form.label :facebook, "Facebook", class: "form-label" %>
      <%= form.text_field :facebook, class: "form-input" %>
    </div>

    <!-- プロフィール画像 -->
    <div class="form-group">
      <%= form.label :profile_image, "プロフィール画像", class: "form-label" %>
      <% if @user.profile_image.attached? %>
        <div class="profile-image-preview-container">
          <%= image_tag @user.profile_image, class: "profile-image-preview" %>
        </div>
      <% end %>
      <%= form.file_field :profile_image, class: "form-input" %>
    </div>

    <!-- 更新ボタン -->
    <%= form.submit "更新する", class: "form-submit-btn" %>
  <% end %>
</div>