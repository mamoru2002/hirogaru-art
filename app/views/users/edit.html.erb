<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "users_edit", media: "all" %>
<% end %>

<div class="container">
  <h1>プロフィールを編集</h1>

  <%= form_with(model: @user, local: true, data: { turbo: false }, class: "user-form") do |form| %>
    <!-- ユーザー名 -->
    <div class="form-group">
      <%= form.label :username, "ユーザー名" %>
      <%= form.text_field :username, class: "form-input" %>
    </div>

    <!-- 自己紹介 -->
    <div class="form-group">
      <%= form.label :bio, "自己紹介", class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_area :bio, class: "form-textarea" %>
    </div>

    <!-- ウェブサイト -->
    <div class="form-group">
      <%= form.label :website, "ウェブサイト" %>
      <%= form.text_field :website, class: "form-input" %>
    </div>

    <!-- SNSフィールド -->
    <div class="form-group">
      <%= form.label :twitter, "Twitter" %>
      <%= form.text_field :twitter, class: "form-input" %>
    </div>
    <div class="form-group">
      <%= form.label :instagram, "Instagram" %>
      <%= form.text_field :instagram, class: "form-input" %>
    </div>
    <div class="form-group">
      <%= form.label :facebook, "Facebook" %>
      <%= form.text_field :facebook, class: "form-input" %>
    </div>

    <!-- プロフィール画像 -->
    <div class="form-group">
      <%= form.label :profile_image, "プロフィール画像" %>
      <% if @user.profile_image.attached? %>
        <div class="mb-4">
          <%= image_tag @user.profile_image, class: "profile-image-preview w-20 h-20 rounded-full object-cover" %>
        </div>
      <% end %>
      <%= form.file_field :profile_image, class: "form-input" %>
    </div>

    <!-- 更新ボタン -->
    <%= form.submit "更新する", class: "form-submit-btn bg-blue-500 text-white px-4 py-2 rounded" %>
  <% end %>
</div>